<section id="char-info" class="side-panel">
  <h1>MUME</h1>
  <h3>Char Builder</h3>

  <div id="faction-btns" class="btn-group">
    <button id="faction-free-folk" data-faction="Freefolk" class="selected">Freefolk</button>
    <button id="faction-sauron" data-faction="Sauron">Sauron</button>
    <button id="faction-renegades" data-faction="Renegades">Renegades</button>
  </div>

  <div class="form-container">
    <div id="choose-race">
      <label for="race">Race:</label>
      <select id="race"></select>
    </div>

    <div id="choose-subrace">
      <label for="subrace">Subrace:</label>
      <select id="subrace"></select>
    </div>
  </div>

  <div id="choose-name">
    <label for="name">Name:</label>
    <input type="text" id="name"></input>
  </div>

  <div id="choose-level">
    <label for="level">Level:</label>
    <input type="number" id="level" name="level" min="1" max="100" value="25">
  </div>

  <div id="save-build-field">
    <label for="level">Share:</label>
    <div>
      <button id="save-build" class="btn">Get Link</button>
    </div>
  </div>

